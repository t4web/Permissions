{
    "name": "t4web/permissions",
    "description": "ZF2 Module for managing site permissions. Wrapper for ZfcRbac.",
    "type": "library",
    "license": "GPL-2.0",
    "keywords": [
        "zf2",
        "permissions",
        "rbac"
    ],
    "homepage": "https://github.com/t4web/Permissions",
    "authors": [
        {
            "name": "Max Gulturyan",
            "email": "gulturyan@gmail.com",
            "homepage": "http://about.me/maxgu"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/t4web/authentication.git"
        },
        {
            "type": "git",
            "url": "https://github.com/t4web/base.git"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "zendframework/zendframework": "~2.5.0",
        "zf-commons/zfc-rbac": "~2.4",

        "t4web/authentication": "dev-master",
        "t4web/base": "dev-master"
    },
    "require-dev" : {
        "codeception/codeception": "2.*"
    },

    "autoload": {
